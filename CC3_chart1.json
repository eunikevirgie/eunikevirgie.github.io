{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "description": "United Kingdom CPIH Annual Rate 00: All Times 2015-100",

  "title" : "United Kingdom CPIH Annual Rate 00: All Times 2015-100",

  "width" : 600,
  "height" : 250,
  "padding" : 5,

  "config": {
    "axis": {
      "grid": false 
    }
  },

  "data": {
    "url": "https://raw.githubusercontent.com/eunikevirgie/eunikevirgie.github.io/refs/heads/main/CPIH%20Annual%20Rate.csv",

    "format": {"type": "dsv", "delimiter": ";"}
  },

  "layer": [
    {
      "mark": {"type": "line", "color": "#36b7b4", "point": {"color": "#36b7b4"}, "strokeWidth": 2},
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "axis": {"title": "", "grid": false}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "", "grid": false}
        }
      }
    },
    {
      "mark": {"type": "rule", "color": "#999", "strokeWidth": 1},
      "params": [
        {
          "name": "cursor",
          "select": {
            "type": "point",
            "on": "mousemove",
            "fields": ["Date"],
            "nearest": false
          }
        }
      ],
      "encoding": {
        "x": {"field": "Date", "type": "temporal"},
        "opacity": {
          "condition": {"param": "cursor", "empty": false, "value": 1},
          "value": 0
        }
      }
    },
    {
      "mark": {"type": "circle", "size": 60, "color": "#36b7b4"},
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal"
        },
        "y": {
          "field": "Value",
          "type": "quantitative"
        },
        "opacity": {
          "condition": {"param": "cursor", "empty": false, "value": 1},
          "value": 0
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Date"},
          {"field": "Value", "type": "quantitative", "title": "CPIH Annual Rate (%)"}
        ]
      }
    }
  ]
}
